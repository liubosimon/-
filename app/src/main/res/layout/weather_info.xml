<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--Title Bar-->
    <include
        android:id="@+id/title_bar"
        layout="@layout/title_bar"></include>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/title_bar"
        android:background="@drawable/biz_plugin_weather_shenzhen_bg"
        android:orientation="vertical"
        >
        <!--今日天气-->
        <RelativeLayout
            android:id="@+id/weather_today"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <!--实时天气-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:id="@+id/weather_cur"
               >
                <TextView
                    android:id="@+id/city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15dp"
                    android:singleLine="true"
                    android:text="北京"
                    android:textColor="@android:color/white"
                    android:textSize="40sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/city"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:text="今天12:00发布"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:id="@+id/time"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/time"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:text="湿度:55%"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:id="@+id/humidity"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/humidity"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:text="温度:27°C"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:id="@+id/current_temperature"
                    />
            </RelativeLayout>
            <!--此处放置PM2.5天气信息-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"

                android:orientation="vertical">
                <!--PM2.5详情-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!--此处放PM2.5文字-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="PM2.5"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="220"
                            android:textColor="@android:color/white"
                            android:textSize="30sp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/biz_plugin_weather_0_50"
                        android:layout_marginLeft="5dip"
                        android:id="@+id/pm2_5_img"/>
                </LinearLayout>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="重度污染"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:id="@+id/pm_2_5_qualityty"
                    android:singleLine="true"/>

            </LinearLayout>
            <!--今日天气信息块-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/weather_cur"
                android:layout_marginTop="5dp"
                >
                <!--天气情况图片-->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/biz_plugin_weather_qing"
                    android:id="@+id/weather_img"/>
                <!--今日星期-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今天 星期三"
                    android:layout_toRightOf="@id/weather_img"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:singleLine="true"
                    android:id="@+id/week_today"
                    />
                <!--温度范围-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/week_today"
                    android:layout_toRightOf="@id/weather_img"
                    android:text="-2°C～7°C"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    android:layout_marginLeft="5dip"
                    android:singleLine="true"
                    android:id="@+id/temperature"
                    />

                <!--天气状况-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="多云转晴"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:layout_below="@id/temperature"
                    android:layout_toRightOf="@id/weather_img"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:id="@+id/climate"/>

                <!--风力信息-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/climate"
                    android:layout_toRightOf="@id/weather_img"
                    android:text="微风"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:saveEnabled="true"
                    android:id="@+id/wind"/>
            </RelativeLayout>




        </RelativeLayout>


        <!--未来六日天气信息-->



        <!--其他信息 如广告等-->


        
    </LinearLayout>



</RelativeLayout>
